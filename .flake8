[flake8]
select = B,B9,C,E,F,N,RST,W
ignore = E203,E501,RST201,RST203,RST301,W503,D100
max-line-length = 120
max-complexity = 15
docstring-convention = google
per-file-ignores = tests/*:S101
                   pertpy/__init__.py:F401
                   pertpy/api/data/__init__.py:F401
                   pertpy/api/data/__init__.py:F403
